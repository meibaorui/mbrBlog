@model mbrBlog.Models.BlogVM
@{
    ViewBag.Title = "梅葆瑞的博客 - " + Model.Article.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<article>
    <header>
        <h2>
            @Model.Article.Title
        </h2>
    </header>
    <div>
        <div><p></p></div>
        <span><time datetime="@Model.Article.PublicationTime.Value.Date.ToString("yyyy-MM-dd")" pubdate><span class="glyphicon glyphicon-time"></span> @Model.Article.PublicationTime</time></span>
        &nbsp;&nbsp;
        <span class="glyphicon glyphicon-eye-open">&nbsp;@Model.Article.PvCount</span>
        &nbsp;&nbsp;
        @foreach (var label in Model.Article.ArticleLabel)
        {
            <span class="label label-primary">@(label.Title) </span><span>&nbsp;</span>
        }
        <div><p></p></div>
        <div><p></p></div>
    </div>
    <section>@Html.Raw(Model.Article.Content)</section>
    <footer></footer>
</article>
@section Scripts{
    <script>
        $(function () {
            $("#nav-index").addClass("active");
        })
    </script>
}
